
<div class="row">
<h1 class="text-center text-danger">My Blog</h1>
<% @posts.each do |post| %>
<div class="col-sm-3">
<h2 class="text-danger"><%= post.title %></h2>
<h3 class="text-warning"><%= post.headline %></h3>
<p class="text-primary"><%= post.created_at.strftime("%-d-%b-%Y %l:%M %p") %></p>
<%= link_to "Read More", post_path(post),class:'btn btn-success' %>
<%= link_to "Edit", edit_post_path(post),class:'btn btn-warning' %>
<%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
</div>
<% end %>

</div>