<div class="row">
<h1 class="text-center text-danger"><%= @post.title %></h1>
<h3 class="text-warning"><%= @post.headline %></h3>
<p class="text-success"><%= @post.created_at.strftime("%-d-%b-%Y %l:%M %p") %></p>
<p class="text-justify"><%= @post.content %></p>
</div>
<div class="row">
<%= link_to "Edit", edit_post_path(@post),class:'btn btn-warning' %>
</div>
<div class="row">
<h2>Comments</h2>
<%= render @post.comments %>
</div>
<div class="row">
    
<h2>Add a comment:</h2>
<div class="col-md-6">
<%= render 'comments/form' %>
</div>
</div>